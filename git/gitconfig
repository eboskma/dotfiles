  email = erwin@datarift.nl
[credential]
  helper = osxkeychain
[push]
  default = upstream
[mergetool]
  keepBackup = true
[core]
	editor = vim
[color]
  ui = auto

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  st = status
  ci = commit
  cii = commit --interactive
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
[gitsh]
	defaultCommand = status -bs

[push]
	default = matching
[mergetool]
  keepBackup = true
[core]
	editor = vim
	excludesfile = /Users/erwin/.gitignore_global
[color]
  ui = auto

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  ls = ls-files
  ignored = ls-files -o -i --exclude-standard
  st = status -s -b
  branches = branch -a
  tags = tag
  stashes = stash list
  unstage = reset -q HEAD --
  uncommit = reset --mixed HEAD --
  amend = commit --amend
  nevermind = !git reset --hard HEAD && git clean -d -f
  addremove = !git add . && git ls-files --deleted | xargs git rm
  graph = log --graph -10 --branches --remotes --tags --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  precommit = diff --cached --diff-algorithm=minimal -w
	track = branch -u
[gitsh]
	defaultCommand = status -bs
[gpg]
	program = /usr/local/MacGPG2/bin/gpg2
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[git-up "bundler"]
	check = true
[diff]
	tool = delta
[difftool]
	prompt = false
[difftool "delta"]
	cmd = delta \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[reflow]
	git-server = GitHub
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
